{
	"name": "ownership",
	"bin": "dist/cli.js",
	"files": [
		"dist/**/*.js",
		"src/**/*.ts",
		"!src/**/*.test.ts"
	],
	"main": "src/library.ts",
	"type": "module",
	"scripts": {
		"build": "tsup src/cli.ts --format esm",
		"deploy": "yarn ci && yarn build && chmod +x dist/cli.js && npm publish --access public",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --coverage --ui",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "oxlint .",
		"lint:watch": "node oxlint.watch.js",
		"ci": "yarn lint && yarn format:check && yarn tsc"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.1.0",
		"@types/yargs": "^17.0.33",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"memfs": "^4.23.0",
		"oxlint": "^1.8.0",
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"chalk": "^5.4.1",
		"js-yaml": "^4.1.0",
		"minimatch": "^10.0.3",
		"yargs": "^18.0.0"
	},
	"packageManager": "yarn@4.9.2",
	"engines": {
		"node": ">=23.0.0"
	},
	"license": "MIT",
	"description": "Define ownership of files and dependencies in a project.",
	"author": "Thomas Genin",
	"homepage": "https://github.com/genintho/ownership",
	"version": "0.4.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/genintho/ownership.git"
	},
	"keywords": [
		"ownership",
		"dependencies",
		"files",
		"project"
	]
}
