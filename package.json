{
	"name": "ownership",
	"bin": "src/main.ts",
	"files": [
		"src/**/*.ts",
		"!src/**/*.test.ts"
	],
	"type": "module",
	"scripts": {
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --coverage --ui",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "oxlint .",
		"lint:watch": "node oxlint.watch.js",
		"ci": "yarn lint && yarn format:check && yarn tsc"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.0.1",
		"@vitest/coverage-v8": "^3.1.3",
		"@vitest/ui": "^3.1.3",
		"memfs": "^4.17.2",
		"oxlint": "^1.2.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"vitest": "^3.1.3"
	},
	"dependencies": {
		"chalk": "^5.4.1",
		"js-yaml": "^4.1.0",
		"minimatch": "^10.0.1",
		"yargs": "^17.7.2"
	},
	"packageManager": "yarn@4.9.2",
	"engines": {
		"node": ">=23.0.0"
	},
	"license": "MIT",
	"description": "Define ownership of files and dependencies in a project.",
	"author": "Thomas Genin",
	"homepage": "https://github.com/genintho/ownership",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/genintho/ownership.git"
	},
	"keywords": [
		"ownership",
		"dependencies",
		"files",
		"project"
	]
}
